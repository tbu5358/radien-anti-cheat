# Discord Bot Configuration (REQUIRED for mock mode - real tokens needed for Discord connectivity)
DISCORD_TOKEN=your_real_discord_bot_token_here
DISCORD_CLIENT_ID=your_real_discord_client_id_here
DISCORD_GUILD_ID=your_real_discord_guild_id_here

# Channel IDs (REQUIRED - create these channels in your Discord server)
ANTI_CHEAT_PINGS_CHANNEL=your_channel_id_here
MODERATION_LOGS_CHANNEL=your_channel_id_here
CASE_RECORDS_CHANNEL=your_channel_id_here
BAN_REVIEW_CHANNEL=your_channel_id_here

# Backend API Configuration (OPTIONAL in mock mode - uses mock defaults)
BACKEND_API_URL=https://your-backend-api.com
BACKEND_API_KEY=your_api_key_here

# Webhook Configuration (OPTIONAL in mock mode - uses mock defaults)
WEBHOOK_SECRET=your_webhook_secret_here

# Environment Configuration
NODE_ENV=development

# Mock Mode (set to true to use mock backend while connecting to real Discord)
MOCK_MODE=false
